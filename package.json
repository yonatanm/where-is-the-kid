{
  "name": "where-is-the-kid",

  "engines": {
    "node": "16.x"
  },
  "version": "1.0.0",
  "description": "",

  "scripts": {
    "add": "node dist/src/controllers/runAddPortraits.js",
    "search": "node dist/src/controllers/runSearch.js",
    "compare": "node dist/src/controllers/runCompare.js",
    "test": "echo @@ in test @@ ;  npm run build && jest --passWithNoTests",
    "server:clean": "rm -rf dist/*",
    "server:build:watch": "npm run server:clean && tsc -w",
    "dev": "npm run server:build:watch | (sleep 3 && nodemon dist/server/index.js)",
    "server:build": "npm run server:clean && tsc -d",
    "build": "echo @@ in build @@ ; npm run server:build",
    "start": "echo @@ in start @@ ; node dist/src/index.js",
    "deploy": "npm i && cp ~/.awsrc .env && sudo cp scripts/where-is-the-kid.service /lib/systemd/system/ && sudo systemctl daemon-reload && npm run build && sudo systemctl restart where-is-the-kid.service"
  },
  "author": "yoatanm",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-rekognition": "^3.109.0",
    "@aws-sdk/client-s3": "^3.109.0",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^14.4.1",
    "qrcode-terminal": "^0.12.0",
    "simple-node-logger": "^21.8.12",
    "whatsapp-web.js": "^1.16.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/multer": "^1.4.7",
    "@types/qrcode-terminal": "^0.12.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "dist"
    ]
  }
}
